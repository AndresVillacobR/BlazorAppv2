# Etapa 1: Build
FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src

# Copiamos el archivo .csproj y restauramos dependencias
COPY *.csproj ./
RUN dotnet restore

# Copiamos el resto del proyecto y compilamos
COPY . ./
RUN dotnet publish -c Release -o /app/publish

# Etapa 2: Runtime (producci√≥n)
FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS final
WORKDIR /app
COPY --from=build /app/publish .

# Render necesita que la app escuche en el puerto 8080
ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080

ENTRYPOINT ["dotnet", "TuProyecto.dll"]
