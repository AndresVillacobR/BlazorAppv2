@page "/programar-riego"
@attribute [StreamRendering]
@rendermode InteractiveServer


<PageTitle>Historial de Riegos</PageTitle>
<h1>Historial de Riegos</h1>

<p>Este componente muestra el historial de riegos.</p>

@if (historial == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>ID Dispositivo</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Tipo</th>
                <th>Humedad Inicio</th>
                <th>Humedad Fin</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var riego in historial)
            {
                <tr>
                    <td>@riego.Id</td>
                    <td>@riego.DispositivoId</td>
                    <td>@riego.Inicio.ToString("g")</td>
                    <td>@riego.Fin.ToString("g")</td>
                    <td>@riego.Tipo</td>
                    <td>@riego.HumedadInicio</td>
                    <td>@riego.HumedadFin</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<HistorialRiego>? historial;

    protected override async Task OnInitializedAsync()
    {
        // Simular carga asincrónica
        await Task.Delay(500);

        historial = Enumerable.Range(1, 5).Select(index => new HistorialRiego
        {
            Id = Guid.NewGuid(),
            DispositivoId = Guid.NewGuid(),
            Inicio = DateTime.Now.AddDays(-index),
            Fin = DateTime.Now.AddDays(-index).AddHours(2),
            Tipo = "Automático",
            HumedadInicio = Random.Shared.Next(30, 50),
            HumedadFin = Random.Shared.Next(50, 80)
        }).ToList();
    }

    private class HistorialRiego
    {
        public Guid Id { get; set; }
        public Guid DispositivoId { get; set; }
        public DateTime Inicio { get; set; }
        public DateTime Fin { get; set; }
        public string Tipo { get; set; } = string.Empty;
        public double HumedadInicio { get; set; }
        public double HumedadFin { get; set; }
    }
}
