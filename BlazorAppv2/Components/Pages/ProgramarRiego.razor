@page "/programar-riego"
@inject Supabase.Client supabaseClient
@using BlazorAppv2.Models

<h1>Historial de Riegos</h1>

@if (historial == null)
{
    <p>Cargando...</p>
}
else if (!historial.Any())
{
    <p>No hay registros en el historial</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>ID Dispositivo</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Tipo</th>
                <th>Humedad Inicio</th>
                <th>Humedad Fin</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var riego in historial)
            {
                <tr>
                    <td>@riego.id.ToString().Substring(0, 8)...</td>
                    <td>@riego.dispositivo_id.ToString().Substring(0, 8)...</td>
                    <td>@riego.inicio.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@riego.fin.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@riego.tipo</td>
                    <td>@riego.humedad_inicio%</td>
                    <td>@riego.humedad_fin%</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<RiegoItem>? historial;

    protected override async Task OnInitializedAsync()
    {
        await CargarHistorialReal();
    }

    private async Task CargarHistorialReal()
    {
        var result = await supabaseClient.From<RiegoItem>().Get();
        if (result?.ResponseMessage?.IsSuccessStatusCode == true)
        {
            historial = result.Models ?? new List<RiegoItem>();
        }
        else
        {
            historial = new List<RiegoItem>();
        }
        StateHasChanged();
    }
}